<%= form_with(model: component_params[:folder], local: true, url: component_params[:url], method: component_params[:method], class:"page-body list required", id:"form-new-folder", multipart: true) do |form| %>
  <div class="modal fade" id=<%=component_params[:form_id]%> tabindex="0" aria-labelledby="editFolderModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content text-white-50" style="background-color: #1a1a1a !important;">
        <div class="modal-header" style="border-bottom: 1px solid #000000;">
          <h5 class="modal-title" id="editFolderModalLabel"><%= component_params[:title] %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body" style="background-color: #1a1a1a !important;">
          <%= form.text_field :name, id:"product_name", class:"form-control forms-inline", style: "background-color: #4d4d4d; border: 0px" ,placeholder:"Type folder name", maxlength:"30", required:true %>
        </div>

        <%= form.hidden_field :parent_id, required: true, class: 'form-control', value: component_params[:parent_id]  %>

        <div class="modal-footer" style="border-top: 1px solid #000000;">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-success" id="folder-submit" >Save changes</button>
        </div>
      </div>
    </div>
  </div>
<% end %>
